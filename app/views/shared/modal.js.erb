$('body').append("<%= escape_javascript render 'shared/modal' %>");
$('body').addClass('no-scroll');
renderRandomColors();

$('body').on('click', '#modal-overlay, .fa-times-circle', function(event) {
  if (event.target === event.currentTarget) {
    $('#modal-overlay').remove();
    $('body').removeClass('no-scroll');
    renderRandomColors();
  }
});
