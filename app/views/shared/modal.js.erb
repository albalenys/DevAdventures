$('<%= escape_javascript @parent_element %>').append("<%= escape_javascript render 'shared/modal' %>");
$('body').addClass('no-scroll');
renderRandomColors();

$('<%= escape_javascript @parent_element %>').on('click', '#modal-overlay, .fa-times-circle', function(event) {
  if (event.target === event.currentTarget) {
    $('#modal-overlay').remove();
    renderRandomColors();
    $('body').removeClass('no-scroll');
  }
});
