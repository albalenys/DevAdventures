<h4 class="center">Further Resources</h4>

<ul>
  <% @post.resources.each do |resource| %>
    <li id=<%= "resource-#{resource.id}" %>>
      <%= link_to "#{resource.title}", resource.url, target: "_blank" %>

      <% if logged_in? %>
        <div class="right">
          <%= link_to image_tag("edit-icon.png", class: "sub-icon"), edit_post_resource_path(@post, resource), class: "remove-border", format: :js, remote: true %>
          <%= link_to image_tag("delete-icon.png", class: "sub-icon"), post_resource_path(@post, resource), class: "remove-border", method: "DELETE" %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>