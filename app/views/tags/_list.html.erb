<p>
  <div class="center">
    <% if logged_in? %>
      <%= link_to "Add Tag", new_post_tag_path(@post.id), class: "sub-button", remote: true %>
    <% end %>
  </div>

  <% unless @post.tags.empty? %>
    <strong>Tags</strong>:
  <% end %>
  
  <div id="tag-list">
    <% @post.tags.each do |tag| %>
      <%= render partial: "tags/tag", object: tag %>
      <% unless @post.tags.last == tag %>, <% end %>
    <% end %>
  </div>
</p>