<div id="tags-container">
  <% if logged_in? %>
    <%= link_to image_tag("plus-icon.png", alt: "Add Tag", class: "icon"), taggable.is_a?(Project) ? new_project_tag_path(taggable) : new_post_tag_path(taggable), class: "remove-border", remote: true %>
  <% end %>

  <% unless taggable.tags.empty? && !logged_in? %>
    <h3>Tags</h3>
  <% end %>

  <div id="tag-list">
    <% taggable.tags.each do |tag| %>
      <%= render "tags/tag", tag: tag, taggable: taggable %>
    <% end %>
  </div>
</div>