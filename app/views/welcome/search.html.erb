<main>
  <h2 class="center">Searching for "<%= @query %>"...</h2>

  <% if @posts.empty? && @projects.empty? %>
    <p class="center">No posts match your search.<br>
      Your query might be too specific.</p>
  <% end %>

  <% @posts.each do |post| %>
    <h3>Blog Posts</h3>
    <ul>
      <li><%= link_to post.title, post_path(post) %>: <%= post.created_at %></li>
    </ul>
  <% end %>
  <% @projects.each do |project| %>
    <h3>Projects</h3>
    <ul>
      <li><%= link_to project.title, project_path(project) %>: <%= project.created_at %></li>
    </ul>
  <% end %>
  <hr>
</main>
