<main>
  <h1 class="center">Projects</h1>
  <% if logged_in? %>
    <div class="center">
      <%= link_to "Add Project", new_project_path, class: "sub-button" %>
    </div>
  <% end %>
  <hr>
  <% @projects.each do |project| %>
    <%= link_to "#{project.title}", project.url %>
    <% if logged_in? %>
      <div class="right">
        <%= link_to "Edit", edit_project_path(project.id), class: "sub-button" %>
        <%= link_to "Delete", project_path(project.id), method: "DELETE", class: "sub-button" %>
      </div>
    <% end %><br>

    <% if project.software %>
      <div class="sub">
        Software used: <%= project.software %>
      </div>
    <% end %>
    <p><%= project.description %></p>
    <hr>
  <% end %>
</main>