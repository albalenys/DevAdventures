<div id="blogs-container">
  <% if @post.private %>
    <div class="center private">
      <p>PRIVATE POST</p>
    </div>
  <% end %>

  <div id="top" class="center">
    <h1 id="post-title">
      <%= @post.title %>
    </h1>
  </div>

  <div class="center sub">
    published <%= @post.created_at.strftime("%B, %d, %Y") %><br>
    by Abby De Los Santos<br>
    <% if logged_in? %>
      <%= link_to image_tag("edit-icon.png", class: "sub-icon"), edit_post_path(@post), class: "remove-border", remote: true %>
      <%= link_to image_tag("delete-icon.png", class: "sub-icon"), post_path(@post), class: "remove-border", method: "DELETE" %>
    <% end %>
  </div>

  <hr>
  <p class="center">
    <%= @post.content.html_safe %>
  </p>
</div>