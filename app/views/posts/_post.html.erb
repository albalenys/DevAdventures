<div id="blogs-container" class="center">
  <% if @post.private %>
    <div class="private">
      PRIVATE
    </div>
  <% end %>

  <h1 id="post-title">
    <%= @post.title %>
  </h1>

  <div class="sub">
    <%= @post.created_at.strftime("%B, %d, %Y") %><br>

    <% if logged_in? %>
      <%= link_to image_tag("edit-icon.png", class: "sub-icon"), edit_post_path(@post), class: "remove-border", remote: true %>
      <%= link_to image_tag("delete-icon.png", class: "sub-icon"), post_path(@post), class: "remove-border", method: "DELETE" %>
    <% end %>
  </div>

  <p id="blog-content">
    <%= @post.content.html_safe %>
  </p>
</div>