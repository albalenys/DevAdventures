<main id="top">
  <h1 class="center"><%= @post.title %></h1>

  <div class="center sub">
    Published <%= @post.created_at.strftime("%B, %d, %Y") %> by Abby De Los Santos
  </div>

  <% if logged_in? %>
    <div class="center">
      <%= link_to "Edit Post", edit_post_path(@post.id), class: "sub-button" %>
      <%= link_to "Delete Post", post_path(@post.id), method: "DELETE", class: "sub-button" %>
    </div>
  <% end %>
  <hr>
  <p><%= @post.content.html_safe %></p>

  <% if !@post.resources.empty? %>
    <%= render "resources/list" %>
  <% end %>

  <%= render "footer" %>
</main>