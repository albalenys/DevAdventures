<div id="blogs-container" class="large-container">
  <% if @post.private %>
    <div class="center private">
      <p>PRIVATE POST</p>
    </div>
  <% end %>

  <div id="top" class="center">
    <h1 id="post-title">
      <%= @post.title %>
    </h1>
  </div>

  <div class="center sub">
    published <%= @post.created_at.strftime("%B, %d, %Y") %><br>
    by Abby De Los Santos<br>

    <% unless @post.tags.empty? %>
      <strong>Categories</strong>:
      <% @post.tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %><% unless @post.tags.last == tag %>, <% end %>
      <% end %>
    <% end %>

    <p>
      <% if logged_in? %>
        <%= link_to image_tag("edit-icon.png", class: "sub-icon"), edit_post_path(@post), class: "remove-border", remote: true %>
        <%= link_to image_tag("delete-icon.png", class: "sub-icon"), post_path(@post), class: "remove-border", method: "DELETE" %>
      <% end %>
    </p>
  </div>

  <hr>
  <p><%= @post.content.html_safe %></p>
  <hr>

  <%= render "resources/list" %>

  <%= render "footer" %>
</div>
