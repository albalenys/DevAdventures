<div class="large-container">
  <% if @post.private %>
    <div class="center private">
      <p>PRIVATE POST</p>
    </div>
  <% end %>

  <h1 id="top" class="center">
    <% if logged_in? %>
      <span id="post-title">
        <%= link_to @post.title, posts_edit_title_path(params[:id], format: :js), remote: true %>
      </span>
    <% else %>
      <span id="post-title"><%= @post.title %></span>
    <% end %>
  </h1>

  <div class="center sub">
    Published <%= @post.created_at.strftime("%B, %d, %Y") %> by Abby De Los Santos<br>

    <% unless @post.tags.empty? %>
      <strong>Categories</strong>:
      <% @post.tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %><% unless @post.tags.last == tag %>, <% end %>
      <% end %>
    <% end %>

    <p>
      <% if logged_in? %>
        <%= link_to image_tag("edit-icon.png", class: "sub-icon"), edit_post_path(@post) %>
        <%= link_to image_tag("delete-icon.png", class: "sub-icon"), post_path(@post), method: "DELETE" %>
      <% end %>
    </p>
  </div>

  <hr>
  <p><%= @post.content.html_safe %></p>

  <div class="center">
    <% if logged_in? %>
      <%= link_to "Add Resource", new_post_resource_path(params[:id]), class: "sub-button" %>
    <% end %>
  </div>

  <% unless @post.resources.empty? %>
    <%= render "resources/list" %>
  <% end %>

  <%= render "footer" %>
</div>
