<h1 id="top" class="center"><%= @post.title %></h1>

<div class="center sub">
  Published <%= @post.created_at.strftime("%B, %d, %Y") %> by Abby De Los Santos
</div>

<% if logged_in? %>
  <div class="center">
    <%= link_to "Edit Post", edit_post_path(@post), class: "sub-button" %>
    <%= link_to image_tag("delete-icon.png", class: "sub-icon"), post_path(@post), method: "DELETE" %>
  </div>
<% end %>
<hr>
<p><%= @post.content.html_safe %></p>

<% if logged_in? %>
  <div class="center">
    <%= link_to "Add Resource", new_post_resource_path(params[:id]), class: "sub-button" %>
  </div>
<% end %>

<% unless @post.resources.empty? %>
  <%= render "resources/list" %>
<% end %>

<%= render "footer" %>
