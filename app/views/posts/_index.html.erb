<% if @private %>
  <section>
    <div class="private">
      PRIVATE
    </div>
<% end %>

<h2 class="center">
  <% if logged_in? %>
    <%= link_to fa_icon("plus-circle", alt: "Add Blog Post"), new_post_path, class: "remove-border", remote: true %>
  <% end %>
  Blog Posts
</h2>

<% @posts_by_month.each do |month_year, posts| %>
  <hr>
  <h3 class="center">
    <%= month_year.strftime("%B %Y") %>
  </h3>
  <ul>
    <% posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </ul>
<% end %>

<% if @private %>
  </section>
<% end %>
